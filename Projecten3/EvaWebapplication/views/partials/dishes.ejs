<div class="page-header">
    <h1>Dishes</h1>
</div>


<table class="table" ng-hide="showTableHideForm">
    <thead class="thead-inverse">
    <th>Name</th>
    <th>Dish type</th>
    <th>cooking time</th>
    <th>Difficulty</th>
    <th>ImageId</th>
    </thead>
    <tr ng-repeat="dish in dishes">
        <td>{{dish.name}}</td>
        <td>{{dish.dishType}}</td>
        <td class="text-capitalize">{{dish.cookingTime}}</td>
        <td>{{dish.difficulty}}</td>
        <td>{{dish.imageId}}</td>

        <td>
            <button class="btn btn-default" type="button" ng-hide="showPreparation" ng-click="showPreparation = true">
                Preparation
            </button>
        </td>
        <td>
            <button class="btn btn-default" type="button" ng-show="showPreparation" ng-click="showPreparation = false">
                Close
            </button>
        </td>
        <td class="glyphicon glyphicon-trash"></td>
        <td ng-show="showPreparation">{{dish.preparation}}</td>
    </tr>
</table>

<div class="form-group">
    <button class="btn btn-default" type="button" ng-click="showTableHideForm = true" ng-hide="showTableHideForm"> Add a
        new dish
    </button>
    <form ng-submit="createDish()" ng-show="showTableHideForm">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" ng-model="name" required/>
        </div>
        <div class="form-group">
            <label>Cooking time</label>
            <select class="form-control" ng-model="cookingTime" required>
                <option></option>
                <option>Short</option>
                <option>Medium</option>
                <option>Long</option>
            </select>
        </div>
        <div class="form-group">
            <label>Difficulty</label>
            <select class="form-control" ng-model="difficulty" required>
                <option></option>
                <option>Starters</option>
                <option>Advanced</option>
                <option>Masters</option>
            </select>
        </div>
        <div class="form-group">
            <label>Dish type</label>
            <select class="form-control" ng-model="dishType" required>
                <option></option>
                <option>Appetizer</option>
                <option>Maindish</option>
                <option>Dessert</option>
            </select>
        </div>
        
        <div class="form-group">
            <label>Image Id</label>
            <input type="number" class="form-control" ng-model="imageId" required/>
        </div>

        <div class="form-group-row">
            <label>Ingredients</label>
        </div>

        <div class="row">
            <div class="col-lg-5">
                <div class="input-group">
                    <span class="input-group-addon">
                    <label>Name</label>
                    </span>
                    <input type="text" class="form-control" aria-label="Name" ng-model="iName">
                </div>
            </div>
            <div class="col-lg-5">
                <div class="input-group">
                    <span class="input-group-addon">
                    <label>Amount</label>
                    </span>
                    <input type="text" class="form-control" aria-label="amount" ng-model="iAmount">
                </div>
            </div>
            <div class="col-lg-2">
                <div class="input-group">
                    <span class="input-group-addon"/>
                    <button class="btn btn-default" ng-click="add()" type="button">Add</button>
                </div>
            </div>
        </div>

        <table class="table">
            <thead class="thead-inverse">
            <th>Name</th>
            <th>Amount</th>
            </thead>
            <tr ng-repeat="ingredient in ingredients">
                <td>{{ingredient.name}}</td>
                <td>{{ingredient.amount}}</td>
                <td class="glyphicon glyphicon-trash"></td>
            </tr>
        </table>

        <div class="form-group">
            <label>Preparation</label>
            <textarea class="form-control" rows="5" ng-model="preparation" required></textarea>
        </div>

        <button class="btn btn-primary" type="submit">Confirm</button>
        <button class="btn btn-danger" type="button" ng-click="showTableHideForm = false"> Cancel</button>
    </form>
</div>
