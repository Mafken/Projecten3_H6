<div class="page-header">
    <h1>Achievements</h1>
</div>
<table class="table" ng-hide="showTableHideForm">
    <thead class="thead-inverse">

    <th>Title</th>
    <th>Achievement type</th>
    <th>Description</th>

    </thead>
    <tr ng-repeat="ach in achievements">
        <td>{{ach.title}}</td>
        <td>{{ach.achievementType}}</td>
        <td>{{ach.description}}</td>
        <td class="glyphicon glyphicon-edit" ng-click="showAchievement(ach)"></td>
        <td class="glyphicon glyphicon-trash" ng-click="deleteAchievement(ach)"></td>
    </tr>
</table>
<div class="form-group">
    <button class="btn btn-default" type="button" ng-hide="showTableHideForm" ng-click="showTableHideForm = true">Add a
        new Achievement
    </button>
    <form ng-submit="createAchievement()" ng-show="showTableHideForm">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" ng-model="title" required/>
        </div>
        <div class="form-group">
            <label>Achievement type</label>
            <select class="form-control" ng-model="achievementType" required>
                <option></option>
                <option>Bronze</option>
                <option>Silver</option>
                <option>Gold</option>
            </select>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" rows="5" ng-model="description" required></textarea>
        </div>
        <button class="btn btn-primary" type="submit" ng-hide="editMode">Confirm</button>
        <button class="btn btn-primary" type="button" ng-show="editMode" ng-click=editAchievement()>Edit</button>
        <button class="btn btn-danger" type="button" ng-click="cancelForm()">Cancel</button>
    </form>
</div>
   
