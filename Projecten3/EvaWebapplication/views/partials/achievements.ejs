<div class="page-header">
    <h1>Achievements</h1>
</div>

<div class="form-group" >
    <H3>Add a new Achievement </H3>
    <form ng-submit="createAchievement()" >
          <div class="form-group">
               <label>Title</label>
            <input type="text" class="form-control" ng-model="title" placeholder="title" />
        </div>
 <div class="form-group">
            <label>Achievement type</label>
            <select class="form-control" ng-model="achievementType">
                <option ng-value="BRONZE">BRONZE</option>
                <option ng-value="SILVER">SILVER</option>
                <option ng-value="GOLD">GOLD</option>
            </select>
        </div>
        
<div class="form-group">
             <label>Description</label>
            <textarea class="form-control" rows="5" ng-model="description" placeholder="Description"></textarea>
        </div>
        <button type="submit" >Confirm</button>
        
    </form>

    </div>
   <table class="table">
       <thead class="thead-inverse">
        
        <th>Title</th>
        <th>Achievement type</th>
        <th>Description</th>
        
        
  </thead>    
  <tr ng-repeat="ach in achievements">
        <td>{{ach.title}}</td>
        <td>{{ach.achievementType}}</td>
        <td>{{ach.description}}</td>
        <td class="glyphicon glyphicon-trash" ng-click="deleteAch(ach)"></td> 
  </tr>
</table> 
