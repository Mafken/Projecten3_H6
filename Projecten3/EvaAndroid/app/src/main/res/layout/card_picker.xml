<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        card_view:contentPaddingTop="15dp"
        card_view:contentPaddingBottom="15dp"
        card_view:contentPaddingLeft="20dp"
        card_view:contentPaddingRight="20dp"
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="@color/contentColor"
        android:layout_margin="5dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/dish_placeholder"
                android:id="@+id/pickerDishImage"/>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressPickerCardDishTitle"
                    android:text=""
                    android:ellipsize="end"
                    android:maxLines="3"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>